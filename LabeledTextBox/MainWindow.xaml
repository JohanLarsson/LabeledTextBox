<Window x:Class="LabeledTextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:labeledTextBox="clr-namespace:LabeledTextBox"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" 
        d:DataContext="{d:DesignInstance labeledTextBox:Vm}">
    <Window.Resources>
        <Style TargetType="{x:Type labeledTextBox:KeyValueControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type labeledTextBox:KeyValueControl}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Content="{Binding Key, RelativeSource={RelativeSource TemplatedParent}}" 
                                              ContentTemplate="{TemplateBinding KeyTemplate}"/>
                            <TextBox Grid.Column="1" Text="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}"/>
                            <!--<ContentPresenter Grid.Column="1" 
                                              Content="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource TemplatedParent}}"
                                              ContentTemplate="{TemplateBinding ValueTemplate}"/>-->

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <DataTemplate x:Key="ValueTemplate">
            <TextBox Text="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <StackPanel>
        <GroupBox Header="Itemscontrol">
            <ItemsControl>
                <labeledTextBox:KeyValueControl Key="First" Value="{Binding Value1}" ValueTemplate="{StaticResource ValueTemplate}"/>
                <labeledTextBox:KeyValueControl Key="Second" Value="{Binding Value2}" ValueTemplate="{StaticResource ValueTemplate}"/>
                <labeledTextBox:KeyValueControl Key="Last" Value="{Binding Value3}" ValueTemplate="{StaticResource ValueTemplate}"/>
            </ItemsControl>
        </GroupBox>
        <GroupBox Header="Semi verbose">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <labeledTextBox:KeyValueControl Grid.Row="0" Key="First" Value="{Binding Value1}"/>
                <labeledTextBox:KeyValueControl Grid.Row="1" Key="Second" Value="{Binding Value2}"/>
                <labeledTextBox:KeyValueControl Grid.Row="2" Key="Last" Value="{Binding Value3}"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Verbose Xaml">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Text="First"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Value1, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Second"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Value2, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Last"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Value3, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </GroupBox>
    </StackPanel>
</Window>
